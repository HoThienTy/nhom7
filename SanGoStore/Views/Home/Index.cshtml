@model IEnumerable<sangostore.models.sanpham>
    @{
        ViewBag.Title = "Trang chủ";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục sản phẩm</span>
                        </div>
                        @Html.Action("DanhMucSanPham", "Home") <!-- Cập nhật hành động -->
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__item set-bg" data-setbg="/Assets/Images/bannerSanGo.jpg" style="width:100%">
                        <div class="hero__text">
                            <span>Ưu đãi đặc biệt</span>
                            <h2>Gỗ <br />Sàn</h2>
                            <p>Giá chỉ từ 200.000 vnđ</p>
                            <a href="@Url.Action("Index", "Shop")" class="primary-btn">MUA NGAY</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
    <!-- Categories Section Begin -->
    <section class="categories">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                    @foreach (var sanpham in Model)
                    {
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="@Url.Content("~/Assets/Images/" + sanpham.AnhDD)">
                                <h5><a href="@Url.Action("Details", "Shop", new { id = sanpham.MaSP })">@sanpham.TenSP</a></h5>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->
    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Sản phẩm nổi bật</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                @foreach (var sanpham in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix fresh-meat">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/Assets/Images/" + sanpham.AnhDD)">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="@Url.Action("Details", "Shop", new { id = sanpham.MaSP })"><i class="fa fa-eye"></i></a></li>
                                    <li><a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSP = sanpham.MaSP, @strURL = Request.Url.ToString() })"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">@sanpham.TenSP</a></h6>
                                <h5>@sanpham.GiaBan</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>



